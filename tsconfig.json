{
   "compilerOptions": {
      "lib": [
         "dom",
         "es6",
         "es2017",
         "esnext.asynciterable"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
   ],
}